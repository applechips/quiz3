<!DOCTYPE html>
<html>
  <head>
    <title>Quiz 3: Idea Factory</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<div class="container example5">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar5">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <img style="width: 40px;" src="/lightbulb.png" id="logo"><strong id="title">Idea Factory</strong>

      </div>
      <div id="navbar5" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">

          <li><%= link_to "All Ideas", root_path %></li>
          <% if user_signed_in? %>
              <li><%= link_to "Create an Idea", new_idea_path %></li>
                <p align="right"><strong>Welcome <%= current_user.full_name %></strong>
            <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_path  %></li>
            <li><%= link_to "Sign In", new_session_path %></li>
          <% end %>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
    <!--/.container-fluid -->
  </nav>

</div>


    <%= yield %>
  </body>
</html>
